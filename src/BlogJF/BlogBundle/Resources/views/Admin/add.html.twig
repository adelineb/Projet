    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    {#<fieldset>#}
        <label>Titre de l'épisode</label>{{ form_widget(form.titre) }}
        <br/><br/><br/>

        {{ form_widget(form.roman, { 'attr': {'class': 'tinymce' }} ) }}

        <head>
            <script src="//cloud.tinymce.com/stable/tinymce.min.js?apiKey=e12o1hm518doi0e8ggudjjxsvqs4aq2n92actaftp4bkmynv"></script>
            <script>tinymce.init({ selector:'textarea' });</script>
        </head>
        <body>
        <textarea placeholder="Votre commentaire"></textarea>
        </body>

    {{ form_widget(form._token) }}

    <div>
        <div style="text-align:right">
            <a href="{{ path('blogjf_admin') }}"><input type="button" class="btn btn-danger" value="Annuler" /></a>
            <input type="submit" class="btn btn-default" name="suivant" value="Valider" />
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}